<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Fragment.NumberDailerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/rectange_bg"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="start"
            android:id="@+id/txtNumber"
            android:typeface="sans"
            android:textStyle="normal"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/buttonBgColour"
            android:textSize="@dimen/dialerButtonTextSize"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/imgDelete"
            android:src="@drawable/deletetext"
            />

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:id="@+id/btn1"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="1"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:id="@+id/btn2"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="2"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:id="@+id/btn3"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="3"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:id="@+id/btn4"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="4"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:id="@+id/btn5"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="5"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:id="@+id/btn6"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:id="@+id/btn7"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="7"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:id="@+id/btn8"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="8"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:id="@+id/btn9"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="9"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:typeface="sans"
                android:textStyle="normal"
                android:id="@+id/btnPlus"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="+"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:id="@+id/btn0"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="0"/>
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:id="@+id/btnHash"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/dailer_button_bg"
                android:text="#"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="@dimen/dialerButtonSize"
                android:layout_height="@dimen/dialerButtonSize"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:id="@+id/btnDone"
                android:typeface="sans"
                android:textStyle="normal"
                android:textSize="@dimen/dialerButtonTextSize"
                android:textColor="@color/buttonBgColour"
                android:background="@drawable/done_button_layer"
                android:text=""/>
        </TableRow>
    </TableLayout>

</LinearLayout>
